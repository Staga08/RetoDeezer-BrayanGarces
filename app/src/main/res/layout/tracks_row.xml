<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SecondActivity">

    <ImageView
        android:id="@+id/trackPhoto"
        android:layout_width="129dp"
        android:layout_height="126dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[4]" />

    <TextView
        android:id="@+id/trackName"
        android:layout_width="144dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Nombre Cancion"
        app:layout_constraintStart_toEndOf="@+id/trackPhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trackArtist"
        android:layout_width="138dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="Artista Cancion"
        app:layout_constraintStart_toEndOf="@+id/trackPhoto"
        app:layout_constraintTop_toBottomOf="@+id/trackName" />

    <TextView
        android:id="@+id/trackDate"
        android:layout_width="141dp"
        android:layout_height="19dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="14dp"
        android:text="AÃ±o Lanzamiento"
        app:layout_constraintStart_toEndOf="@+id/trackPhoto"
        app:layout_constraintTop_toBottomOf="@+id/trackArtist" />
</androidx.constraintlayout.widget.ConstraintLayout>